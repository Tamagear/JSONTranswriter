<Window x:Class="ChromaJSONEditor.Dialogs.NewCardDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChromaJSONEditor.Dialogs"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        WindowStartupLocation="CenterScreen"
        Icon="../Graphics/icon.png"
        Title="New Card" Height="150" Width="300" SizeToContent="Height">
    <Grid>
        <StackPanel>
            <Label Content="New Card Color"/>
            <ComboBox x:Name="Color_Dropdown">
                    <ComboBoxItem IsSelected="True">Red</ComboBoxItem>
                    <ComboBoxItem>Purple</ComboBoxItem>
                    <ComboBoxItem>Green</ComboBoxItem>
                    <ComboBoxItem>Blue</ComboBoxItem>
                    <ComboBoxItem>Black</ComboBoxItem>
            </ComboBox>
            <Label Content="New Card Amount"/>
            <TextBox x:Name="Amount_Field" Text="1" TextAlignment="Right"/>
            <Separator Height="10" Background="Transparent"/>
            <Button Content="Create New Card(s)" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
